rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Estructura: orders/{orderId}/{phase}/{file}
    match /orders/{orderId}/{phase}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Bloquea listados
    match /{allPaths=**} {
      allow list: if false;
    }
  }
}
